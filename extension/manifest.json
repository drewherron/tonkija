{
  "manifest_version": 3,
  "name": "Tonkija",
  "version": "1.0",
  "description": "A Chrome extension for code analysis.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "background"

  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
